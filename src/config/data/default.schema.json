{
  "env": {
    "doc": "The application environment.",
    "format": [
      "production",
      "development",
      "test",
      "lto"
    ],
    "default": "development",
    "env": "NODE_ENV"
  },
  "port": {
    "doc": "The port the application runs on.",
    "default": 80,
    "env": "PORT"
  },
  "roles": {
    "doc": "Configuration for roles on trust network",
    "format": "Object",
    "default": {
      "root": {
        "description": "The root role"
      }
    },
    "env": "TRUST_NETWORK_ROLES"
  },
  "association": {
    "indexing": {
      "default": "none",
      "format": ["none", "trust", "all"],
      "env": "ASSOCIATION_INDEXING"
    },
    "use_graph": {
      "default": false,
      "format": "Boolean",
      "env": "ASSOCIATION_USE_GRAPH"
    }
  },
  "stats": {
    "operations": {
      "doc": "Statistics for operations in the blockchain",
      "default": false,
      "format": "Boolean",
      "env": "STATS_OPERATIONS"
    },
    "transactions": {
      "doc": "Statistics for transactions in the blockchain",
      "default": false,
      "format": "Boolean",
      "env": "STATS_TRANSACTIONS"
    },
    "supply": {
      "doc": "Statistics for token supply",
      "default": false,
      "format": "Boolean",
      "env": "STATS_SUPPLY"
    }
  },
  "redis": {
    "url": {
      "default": "redis://localhost",
      "env": "REDIS_URL"
    },
    "cluster": {
      "default": "",
      "env": "REDIS_CLUSTER"
    },
    "graph": {
      "host": {
        "default": "localhost",
        "env": "REDIS_GRAPH_HOST"
      },
      "port": {
        "default": "6379",
        "env": "REDIS_GRAPH_PORT"
      }
    }
  },
  "leveldb": {
    "default": "lto-index",
    "env": "LEVELDB"
  },
  "node": {
    "url": {
      "default": "",
      "env": "NODE_URL"
    },
    "starting_block": {
      "default": 1,
      "env": "NODE_STARTING_BLOCK"
    },
    "restart_sync": {
      "default": false,
      "env": "NODE_RESTART_SYNC"
    }
  },
  "anchor": {
    "doc": "The config of this application, with a namespace so it can be merged into larger configs",
    "api": {
      "secret": {
        "default": "lt1secretapikey!",
        "env": "ANCHOR_API_SECRET"
      }
    },
    "auth": {
      "token": {
        "default": "",
        "env": "ANCHOR_AUTH_TOKEN"
      }
    },
    "indexing": {
      "default": "none",
      "format": ["none", "trust", "all"],
      "env": "ANCHOR_INDEXING"
    },
    "fee": {
      "default": 35000000,
      "env": "ANCHOR_FEE"
    },
    "monitor": {
      "interval": {
        "default": 5000,
        "env": "ANCHOR_MONITOR_INTERVAL"
      }
    },
    "logger": {
      "console": {
        "level": {
          "default": "info",
          "env": "ANCHOR_LOGGER_CONSOLE_LEVEL"
        }
      },
      "combined": {
        "level": {
          "default": "info",
          "env": "ANCHOR_LOGGER_COMBINED_LEVEL"
        }
      }
    }
  },
  "lto": {
    "doc": "Global config of the LTO node",
    "api": {
      "key": {
        "default": "",
        "env": "LTO_API_KEY"
      }
    },
    "node": {
      "url": {
        "default": "http://localhost:6869",
        "env": "LTO_NODE_URL"
      }
    }
  },
  "log": {
    "level": {
      "default": "",
      "env": "LOG_LEVEL"
    }
  },
  "storage": {
    "type": {
      "default": "leveldb",
      "format": [
        "leveldb",
        "redis"
      ],
      "env": "STORAGE_TYPE"
    }
  },
  "index": {
    "processor": {
      "doc": "Configure which processor should be enabled",
      "transaction": {
        "default": 0,
        "env": "INDEX_PROCESSOR_TRANSACTION"
      },
      "verification_method": {
        "default": 0,
        "env": "INDEX_PROCESSOR_VERIFICATION_METHOD"
      },
      "trust_network": {
        "default": 0,
        "env": "INDEX_PROCESSOR_TRUST_NETWORK"
      },
      "stats": {
        "default": 0,
        "env": "INDEX_PROCESSOR_STATS"
      }
    }
  }
}
